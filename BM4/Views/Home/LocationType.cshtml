                    <div class="input-wrapper">
                        @Html.LabelFor(model => model.CitySearchbox, htmlAttributes: new { @class = "" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CitySearchbox, new { htmlAttributes = new { @class = "form-control" } })

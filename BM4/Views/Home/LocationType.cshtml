@model BM4.Models.LocationType

@{
    ViewBag.Title = "Create New Location";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = null;
    List<String> Errors = ViewBag.Errors != null ? ViewBag.Errors : new List<string>();
}

